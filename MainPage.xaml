<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndrewNetoStringTool.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Anagram Checker"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="This app will check to see if 2 words / sentences are anagrams of each other or how many times they share a character"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />
            <Entry
                x:Name="EntryOne"
                Placeholder="First Phrase" />
            <Entry
                x:Name="EntryTwo"
                Placeholder="Second Phrase" />
            <Label Text="Options" />
            <StackLayout>
                <RadioButton Content="Anagram"/>
                <RadioButton Content="Character Match"/>
            </StackLayout>
            <Button
                x:Name="CounterBtn"
                Text="Check"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
